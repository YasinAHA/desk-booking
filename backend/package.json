{
    "name": "desk-booking-backend",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "lint": "eslint src --max-warnings 0",
        "lint:architecture": "eslint \"src/{domain,application,infrastructure,interfaces,composition}/**/*.ts\" --ignore-pattern \"**/*.test.ts\" --max-warnings 0",
        "lint:types": "tsc -p tsconfig.json --noEmit",
        "audit:prod": "npm audit --omit=dev --audit-level=high",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/server.js",
        "test": "tsx --test src/**/*.test.ts",
        "db:migrate": "tsx scripts/db/migrate.ts",
        "db:seed": "tsx scripts/db/seed.ts",
        "docs:openapi": "tsx scripts/export-openapi.ts",
        "worker:outbox": "tsx src/workers/email-outbox-worker.ts"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^8.4.1",
        "@fastify/cors": "^11.2.0",
        "@fastify/helmet": "^13.0.2",
        "@fastify/rate-limit": "^10.0.0",
        "@fastify/swagger": "^9.7.0",
        "@fastify/swagger-ui": "^5.2.5",
        "argon2": "^0.44.0",
        "dotenv": "^17.2.4",
        "fastify": "^5.7.4",
        "jose": "^6.1.3",
        "nodemailer": "^8.0.1",
        "pg": "^8.18.0",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^22.0.0",
        "@types/nodemailer": "^6.4.15",
        "@types/pg": "^8.15.5",
        "eslint": "^10.0.1",
        "eslint-plugin-sonarjs": "^4.0.0",
        "globals": "^17.3.0",
        "tsx": "^4.19.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    }
}
