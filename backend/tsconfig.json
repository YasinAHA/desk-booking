{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "baseUrl": "src",
        "paths": {
            "@domain/*": ["domain/*"],
            "@application/*": ["application/*"],
            "@infrastructure/*": ["infrastructure/*"],
            "@interfaces/*": ["interfaces/*"],
            "@config/*": ["config/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/interfaces/**/*.d.ts"
    ]
}