{
    "name": "desk-booking",
    "private": true,
    "workspaces": [
        "backend"
    ],
    "devDependencies": {
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6"
    },
    "scripts": {
        "prepare": "husky",
        "dev:db": "docker compose -f docker/docker-compose.yml up -d",
        "dev:api": "npm -w backend run dev",
        "db:migrate": "npm -w backend run db:migrate",
        "db:seed:dev": "npm -w backend run db:seed -- dev",
        "db:seed:test": "npm -w backend run db:seed -- test",
        "db:seed:correction": "npm -w backend run db:seed -- correction",
        "qa:precommit": "npm -w backend run lint && npm -w backend run lint:types",
        "qa:prepush": "npm -w backend run test"
    },
    "lint-staged": {
        "backend/src/**/*.ts": [
            "npm -w backend run lint",
            "npm -w backend run lint:types"
        ]
    }
}
